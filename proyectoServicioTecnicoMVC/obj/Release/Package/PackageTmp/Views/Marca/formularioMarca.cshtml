
@{
    ViewBag.Title = "formularioMarca";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Marca.css" rel="stylesheet" />
}


<div class="containerTabla">
    <div class="segmento">
        <a href="@Url.Action("MenuGestion", "Automotriz" )">
            <div class="containerRegresar"><p>Regresar</p></div>
            <div class="flechaBack"><i id="arrow-icon" class='bx bxs-left-arrow-circle'></i></div>
        </a>

        <div class="containertitulo"><p>Gestión de Marcas</p></div>
    </div>
    <div class="espaciado"></div>
    <div class="espaciado"></div>

    <div class="gestionForms">
        <fieldset class="containerForms">
            <legend>Datos de Marcas</legend>
            <form id="frmMarca" class="frm" method="post">
                <div class="inputForms" style="display:none;">
                    <label>ID</label>
                    <input type="text" class="form-control" id="txtidMarca"
                           name="ID_Marca" value="0" readonly />
                </div>
                <div class="inputForms">
                    <label>Nombre de marca</label>
                    <input type="text" class="form-control" id="txtnombreMarca" style="width:300px;"
                           name="Nombre_Marca" placeholder="Ingrese una marca" maxlength="30" />
                    <label id="invalid-Marca" class="invalid-feedback"></label>
                    <label id="valid-Marca" class="valid-feedback">Correcto</label>
                </div>
            </form>
            <div class="btnForms">
                <button type="button" id="btnModificar" style="display:none;" class="btn btn-primary" onclick="ModificarDatos()">Modificar</button>
                <button type="button" id="btnAgregar" class="btn btn-primary" onclick="GuardarDatos()">Agregar</button>
                <button type="button" class="btn btn-secondary" onclick="Limpiar()">Limpiar</button>
            </div>


        </fieldset>

    </div>

    <div id="divTabla" class="divTabla"></div>

</div>

<script src="~/Scripts/sweetalert.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/generic.js"></script>
<script src="~/Scripts/Marca.js"></script>


