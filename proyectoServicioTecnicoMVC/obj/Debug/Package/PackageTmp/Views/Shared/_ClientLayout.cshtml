
@using Capa_Entidad;
@{
    ClienteCLS oClienteCLS = (ClienteCLS)Session["ClienteWeb"];
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title> Servicio Tecnico Autromotriz </title>

    <link rel="stylesheet" href="~/Content/style.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

</head>
<body>

    <div style="display:none;position:absolute;top:0px;left:0px;width:100%;
    height:100%;background-image:url(../../img/cargando.gif);background-repeat:no-repeat;
    background-position:center;z-index:100000" id="cargando">

    </div>


    <div id="disable" class="sidebar close">
        <div class="logo-details">
            <i id="icono" class='bx bx-food-menu'></i>
            <span class="logo_name">Menu</span>
        </div>
        <ul class="nav-links">
            <li>
                <a href="@Url.Action("Index", "websiteClient" )">
                    <i class='bx bxs-user'></i>
                    <span class="link_name">Usuario</span>
                </a>

            </li>


            <li>
                <div class="iocn-link">
                    <a href="@Url.Action("Solicitud", "websiteClient" )">
                        <i class='bx bx-time'></i>
                        <span class="link_name">Agendamiento</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><a class="link_name" href="@Url.Action("Index", "websiteClient" )">Solicitudes</a></li>
                    <li>
                        @Html.ActionLink("Agendar una hora", "AgendamientoHora", "WebsiteClient",
                                                      new { area = "" }, new { @class = "nav-link js-scroll-trigger" })
                    </li>
                    <li>
                        @Html.ActionLink("Ver agendamiento de hora", "Solicitud", "WebsiteClient",
                                      new { area = "" }, new { @class = "nav-link js-scroll-trigger" })
                    </li>
                </ul>
            </li>

            <li>
                <div class="profile-details">
                    <div class="name-job m-1">
                        <div class="profile_name">@oClienteCLS.Usuario_Cliente</div>
                        <div class="job">Antofagasta</div>
                    </div>

                    <a href="@Url.Action("CerrarSesionCliente", "Login")">
                        <i class="bx bx-log-out"></i>
                    </a>

                </div>

            </li>
        </ul>
    </div>
    <section id="home-section" class="home-section">
        <div id="Btnhome" class="home-content">
            <i class='bx bx-menu'></i>
        </div>
        @RenderBody()

    </section>

    <input type="hidden" id="hdfOculto" value="@Url.Content("~")" ; />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/script.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/sweetalert.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
