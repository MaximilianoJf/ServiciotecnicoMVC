@using Capa_Entidad;
@{
    ViewBag.Title = "formularioTrabajadores";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Trabajador.css" rel="stylesheet" />
    AutomotrizCLS oAutomotrizCLS = (AutomotrizCLS)Session["Automotriz"];
}


<div class="containerTabla">
    <div class="segmento">
        <a href="@Url.Action("MenuGestion", "Automotriz" )">
            <div class="containerRegresar"><p>Regresar</p></div>
            <div class="flechaBack"><i id="arrow-icon" class='bx bxs-left-arrow-circle'></i></div>
        </a>

        <div class="containertitulo"><p>Gestión de Trabajadores</p></div>
    </div>
    <div class="espaciado"></div>
    <div class="espaciado"></div>

    <div class="gestionForms">
        <fieldset class="containerForms">
            <legend>Datos de Trabajadores</legend>
            <form id="formulario" class="frm" method="post">
                <div class="inputForms" style="display:none;">
                    <label>ID</label>
                    <input type="text" class="form-control" id="txtTrabajador"
                           name="ID_Trabajador" value="0" readonly />
                </div>
                <div class="inputForms" style="display:none;">
                    <label>ID_Automotriz</label>
                    <input type="text" class="form-control" id="txtAutomotriz"
                           name="ID_Automotriz" value="@oAutomotrizCLS.ID_Automotriz" readonly />
                </div>
                <div style="width: fit-content;">
                    <div class="inputForms" style="display: inline-block;">
                        <label>Nombre del trabajador</label>
                        <input type="text" class="form-control" id="txtnombre"
                               name="Nombre_Trabajador" placeholder="Ingrese un nombre" style="width:300px;" maxlength="50" />
                        <label id="invalid-Trabajador" class="invalid-feedback">Debe ingresar un Trabajador</label>
                        <label id="valid-Trabajador" class="valid-feedback">Correcto</label>
                    </div>
                    <div class="inputForms" style="display: inline-block;">
                        <label>Dirección del trabajador</label>
                        <input type="text" class="form-control" id="txtdireccion"
                               name="Direccion_Trabajador" placeholder="Ingrese una dirección" style="width:300px;" maxlength="50" />
                        <label id="invalid-Direccion" class="invalid-feedback">Debe ingresar una dirección</label>
                        <label id="valid-Direccion" class="valid-feedback">Correcto</label>
                    </div>
                    <div class="inputForms" style="display: inline-block;">
                        <label>RUT del trabajador</label>
                        <input type="text" class="form-control" id="txtRut"
                               name="Rut_Trabajador" placeholder="12345678-X" style="width:300px;" maxlength="10" />
                        <label id="invalid-Rut" class="invalid-feedback">Debe ingresar un RUT</label>
                        <label id="valid-Rut" class="valid-feedback">Correcto</label>
                    </div>
                    <div class="inputForms" style="display: inline-block;">
                        <label>Telefono del trabajador</label>
                        <input type="number" class="form-control" id="txttelefono"
                               name="Telefono_Trabajador" placeholder="Telefono maximo 9 digitos" style="width:300px;" maxlength="9" min="0" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength); this.value = Math.abs(this.value);" />
                        <label id="invalid-Fono" class="invalid-feedback">Debe ingresar un telefono</label>
                        <label id="valid-Fono" class="valid-feedback">Correcto</label>
                    </div>
                    <div class="inputForms" style="display: inline-block;">
                        <label>Correo electronico del trabajador</label>
                        <input type="text" class="form-control" id="txtmail"
                               name="Mail_Trabajador" placeholder="nombre@ejemplo.com" style="width:300px;" maxlength="50" />
                        <label id="invalid-Mail" class="invalid-feedback">Debe ingresar un e-mail</label>
                        <label id="valid-Mail" class="valid-feedback">Correcto</label>
                    </div>
                </div>
            </form>

            <div class="btnForms">
                <button type="button" id="btnModificar" style="display:none;" class="btn btn-primary" onclick="ModificarDatos()">Modificar</button>
                <button type="button" id="btnAgregar" class="btn btn-primary" onclick="GuardarDatos()">Agregar</button>
                <button type="button" class="btn btn-secondary" onclick="Limpiar()">Limpiar</button>
            </div>


        </fieldset>

    </div>

    <div id="divTabla" class="divTabla"></div>

</div>
